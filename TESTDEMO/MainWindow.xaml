<Window MinHeight="200" MinWidth="400" x:Class="TESTDEMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTDEMO"
        mc:Ignorable="d"
        Title="Имя программы" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Login" HorizontalAlignment="Center" Margin="0 0 0 0"/>
            <TextBox Name="LoginBox" Margin="0 0 0 10"/>
            <TextBlock Text="Password" HorizontalAlignment="Center" Margin="0 0 0 0"/>
            <TextBox Name="pswd"/>
            <Button Name="loginBt" Margin="0 20 0 0" Height="20" Content="Log In" Click="loginBt_Click"/>
        </StackPanel>
    </Grid>
</Window>
